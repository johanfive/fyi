{
  "name": "fyi",
  "displayName": "FYI",
  "description": "Nobody reads READMEs. Motion attracts attention. FYI puts readmes in motion",
  "version": "0.0.4",
  "license": "MIT",
  "publisher": "johanFive",
  "author": "johanFive",
  "engines": {
    "vscode": "^1.96.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johanfive/fyi.git"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#555",
    "theme": "dark"
  },
  "markdown": "github",
  "keywords": ["READMEs", "notifications", "updates", "popups", "collaboration"],
  "pricing": "Free",
  "activationEvents": [ "onStartupFinished" ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fyi.resetDismissedNotifications",
        "title": "FYI: Reset Dismissed Notifications"
      },
      {
        "command": "fyi.generateMdFile",
        "title": "FYI: Generate markdown file"
      }
    ]
  },
  "extensionKind": ["workspace"],
  "capabilities": {
    "virtualWorkspaces": false,
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy:fyimd",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "copy:fyimd": "cp ./src/FYI.md ./out"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
